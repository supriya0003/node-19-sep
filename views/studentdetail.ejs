<%- include('./base/header.ejs')%>
<div class="container"></div>
    <div class="alert bg-success my-3">
      <h4 class ="text-center"style="color:white"> student added successfully</h4>
    </div>
</div>

<div class="container">
    <div class="row">
        <table class ="table text-center">
            <thead>
        <tr>
            <th>rollNo</th>
            <th>firstName</th>
            <th>lastName</th>
            <th>adharcard</th>
            <th>mobileNo</th>
            <th>Actions</th>
        </tr>
            </thead>

            <% students.forEach((student)=>{
                %>
                <tr>
                    <td><%=student.rollNo %></td>
                    <td><%=student.firstName %></td>
                    <td><%=student.lastName %></td>
                    <td><%=student.adharcard %></td>
                    <td><%=student.mobileNo %></td>
                    <td>
                       
                        <a href="/student/edit/page/<%= student._id %>" class ="btn btn-warning w-40">Edit</a>
                        <a href="/delete/student/<%= student._id %>" class ="btn btn-danger w-30">DELETE</a>
                    </td>

                </tr>
           <% }) %>
        </table>
    </div>
</div>
<%- include('./base/footer.ejs')%>
